{

	"description": "keep track of your wordle progress across all devices",
	"manifest_version": 2,
	"name": "wordle sync",
	"version": "0.69",
	"homepage_url": "https://wordlesync.com/",
	"icons": {
		"48": "icons/ws-48.png"
	},

	"permissions": [
		// "tabs",
		"storage",
		"*://*.powerlanguage.co.uk/*"
	],

	"content_scripts": [
		{
			"matches": ["*://*.powerlanguage.co.uk/*"],
			"js": ["content_scripts/storage_collector.js"]
		}
	],

	// "options_ui": {
	// 	"browser_style": true,
	// 	"open_in_tab": true,
	// 	"page": "settings/options.html"
	// },

	"browser_specific_settings": {
		"gecko": {
			"id": "firefox@wordlesync.com"
		}
	},

	// update_url

	"browser_action": {
		"default_icon": "icons/wordle-sync.png",
		"default_title": "wordle sync",
		"default_popup": "popup/toolbox.html"
	}

	// "background": {
	// 	"scripts": ["background/link_opener.js"]
	// }

}
